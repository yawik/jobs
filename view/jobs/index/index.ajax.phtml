
<table class="cam-table" id="jobs-list">
<thead>
<tr>
    <th><?=$this->translate('Date of receipt')?></th>
    <th><?=$this->translate('Title of the job')?></th>
    <th><?=$this->translate('Location')?></th> 
    <th><?=$this->translate('Companyname')?></th>
    <th><?=$this->translate('Reference')?></th>
    <th>
     <?php if ($this->acl()->isRole('recruiter')):?>  
       <?=$this->translate('Applications')?>
     <?php else: ?>
       <?=$this->translate('Action')?>
     <?php endif;?>
    </th>
</tr>
</thead>

<tbody>
<?foreach ($jobs as $job):?>
<tr>
    <td><?php if ($job->datePublishStart): echo $this->dateFormat($job->datePublishStart, 'short', 'none'); endif?></td>
    <td><a href="<?php echo $job->link?>"><?php echo strip_tags($job->title)?></a></td>
    <td><?php echo $job->location?></td>
    <td><?php echo $job->company?></td>
    <td><?php echo empty($job->reference)? $job->applyId:$job->reference ?></td>
    <td>
      <?php if ($this->acl()->isRole('recruiter')):?>
         <?php if ($job->applications->count()>0):?>
            <a title="<?php echo $this->translate("total")?>" href="<?php echo $this->url( 'lang/applications', array(), array('query' => 'job=' . $job->id), true) ?>">
            <span class="badge"><?php echo $job->applications->count() ;?></span>
            </a>
         <?php endif;?>
         <?php if ($job->unreadApplications->count()):?>       
            / 
            <a title="<?php echo $this->translate("unread")?>" 
               href="<?php echo $this->url( 'lang/applications', array(), array('query' => 'job=' . $job->id . '&by=new'), true) ?>">
            <span class="badge"> <?php echo $job->unreadApplications->count()?></span>
            </a>
         <?php endif;?>
      <?php else:?>
         <a href="<?php echo $this->url( 'lang/apply/form', array('job' => $job->id , 'lang' => $this->params('lang')));?>"><?=$this->translate('Apply')?></a>
      <?php endif ?>
     </td>
</tr>
<?endforeach?>
</tbody>

</table>
<?php echo $this->paginationControl($jobs, 'Sliding', 'pagination-control', array('lang' => $this->params('lang'), 'route' => 'lang/jobs'));?>
